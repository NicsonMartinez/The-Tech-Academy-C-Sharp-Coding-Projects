@using NewsletterAppMVC.ViewModels
@model List<SignupVm>


<div class="row no-gutters m-3">
    <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
        <div class="card-header text-center">
            <h5 class="m-0">Sign-ups</h5>
        </div>
        <div class="card-body">
            @foreach (var signup in Model)
            {
                @*NOTE: This is a Razor helper method. Creates a form, action="Post" and it is pointing to the 
                        'Unsubscribe' method inside of the 'AdminController'. *@
                using (Html.BeginForm("Unsubscribe", "Admin", FormMethod.Post))
                {
                    @*NOTE: We added this hidden input simply to keep track of and pass in the current record/object Id int 
                            that the admin user is unsubscribing in order to make the specific changes we want the 
                            'Unsubscribe' method to make to the database.*@
                    <input type="hidden" name="Id" value="@signup.Id" />
                    <div class="row mb-3">
                        <div class="col-2">
                            @signup.FirstName
                        </div>
                        <div class="col">
                            @signup.LastName
                        </div>
                        <div class="col-4">
                            @signup.EmailAddress
                        </div>
                        <div class="col">
                            <button type="submit" class="btn btn-danger btn-block"> Unsubscribe</button>
                        </div>
                    </div>
                }

            }
        </div>
    </div>
</div>

