                    <div class="col-2">
                        @userQuote.FirstName
                    </div>
                    <div class="col">
                        @userQuote.LastName
                    </div>
                    <div class="col-5">
                        @userQuote.EmailAddress
                    </div>
                    <div class="col">
                        @userQuote.GeneratedQuote
                    </div>
                </div>*@
            
        </div>
    </div>
</div>

